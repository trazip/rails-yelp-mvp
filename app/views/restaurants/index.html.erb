<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1">Yelp</span>
  <%= link_to 'Add a new restaurant', new_restaurant_path %>
</nav>
<div class="jumbotron">
  <h1 class="display-4">Our Restaurants:</h1>
</div>
<div class="container">
  <div class="grid" style="display: grid; grid-template-columns: 1fr 1fr 1fr 1fr; grid-gap: 16px;">
  <% @restaurants.each do |restaurant| %>
    <div class="card text-center" style="width: 18rem; display: inline-block;">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category.capitalize %> | <%= restaurant.phone_number %></h6>
        <p class="card-text"> <%= restaurant.address %></p>
        <%= link_to "See this restaurant's page", restaurant_path(restaurant), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  </div>
</div>

